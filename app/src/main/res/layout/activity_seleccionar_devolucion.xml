<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.reneascanta.abonar.SeleccionarDevolucion"
              android:orientation="vertical"
    android:background="@drawable/nuevoverde2">


    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVOLUCION MERCANCIA"
            android:textAlignment="center"
        android:background="#2ea518"
        android:textColor="#FFFFFF"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
  >
    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECTORES:"
        />

    <Spinner
        android:id="@+id/s_sectoresMercanciaDevolucion"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>
</LinearLayout>

    <ListView
            android:id="@+id/lv_clientesSectoresDevolucion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>


</LinearLayout>
